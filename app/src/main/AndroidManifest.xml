<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.projetairlocunlock">


    <!-- Permissions de localisation (nécessaires pour la recherche de périphériques Bluetooth) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" android:required="true" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" android:required="true" />

    <!-- Autres permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logofondbleu"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logofondbleu"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProjetAirLocUnlock"
        tools:targetApi="31"
        android:usesCleartextTraffic="true">

        <!-- Déclare LoginActivity comme activité de lancement -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ProjetAirLocUnlock">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Déclare HomeActivity -->
        <activity android:name=".HomeActivity" />

        <!-- Déclare InstructionsActivity -->
        <activity android:name=".InstructionsActivity" />
        <!-- Déclare ProfileActivity -->
        <activity android:name=".ProfileActivity">
        </activity>
    </application>
</manifest>
