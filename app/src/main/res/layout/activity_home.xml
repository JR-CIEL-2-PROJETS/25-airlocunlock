<?xml version="1.0" encoding="utf-8"?>
<android.widget.ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Conteneur principal du contenu -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Barre d'en-tête -->
        <androidx.cardview.widget.CardView
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/blue_fond"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/title"
                    style="@style/CustomStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Mes Réservations"
                    android:textColor="@android:color/white"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@android:color/transparent">

                    <ImageView
                        android:id="@+id/menuIcon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:contentDescription="Menu"
                        android:src="@drawable/ic_menu" />
                </FrameLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Première réservation -->
        <androidx.cardview.widget.CardView
            android:id="@+id/contentCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            android:layout_margin="16dp"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/reservationLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/apartmentImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/paris"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="12dp"/>

                <TextView
                    android:id="@+id/dateRange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Du 16/05/25 8h au 18/05/25 11h  "
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/personCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  1 personne  "
                    android:textColor="@android:color/darker_gray"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/apartmentName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Appartement Cosy - Paris 16ème  "
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:layout_gravity="center"/>

                <Button
                    android:id="@+id/instructionsButton"
                    android:layout_width="294dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#6C92FF"
                    android:letterSpacing="0.05"
                    android:radius="50dp"
                    android:text="VOIR LES INSTRUCTIONS"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Deuxième réservation -->
        <androidx.cardview.widget.CardView
            android:id="@+id/contentCard2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:layout_constraintTop_toBottomOf="@id/contentCard"
            android:layout_margin="16dp"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/reservationLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/apartmentImage2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/london"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="12dp"/>

                <TextView
                    android:id="@+id/dateRange2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Du 20/05/25 10h au 22/05/25 12h  "
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/personCount2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  2 personnes  "
                    android:textColor="@android:color/darker_gray"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/apartmentName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Appartement Luxe - Londres  "
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:layout_gravity="center"/>

                <Button
                    android:id="@+id/instructionsButton2"
                    android:layout_width="294dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#6C92FF"
                    android:letterSpacing="0.05"
                    android:radius="50dp"
                    android:text="VOIR LES INSTRUCTIONS"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Troisième réservation -->
        <androidx.cardview.widget.CardView
            android:id="@+id/contentCard3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:layout_constraintTop_toBottomOf="@id/contentCard2"
            android:layout_margin="16dp"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/reservationLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/apartmentImage3"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tokyo"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="12dp"/>

                <TextView
                    android:id="@+id/dateRange3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Du 25/05/25 9h au 28/05/25 14h  "
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/personCount3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  3 personnes  "
                    android:textColor="@android:color/darker_gray"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/apartmentName3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Appartement Premium - Tokyo  "
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:layout_gravity="center"/>

                <Button
                    android:id="@+id/instructionsButton3"
                    android:layout_width="294dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#6C92FF"
                    android:letterSpacing="0.05"
                    android:radius="50dp"
                    android:text="VOIR LES INSTRUCTIONS"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</android.widget.ScrollView>
